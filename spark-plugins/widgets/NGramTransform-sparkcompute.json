{
  "metadata": {
    "spec-version": "1.0"
  },
  "configuration-groups": [
    {
      "label": "NGramTransform Properties",
      "properties": [
        {
          "widget-type": "textbox",
          "label": "Field Used To Transform Input Features Into N-Grams",
          "name": "fieldToBeTransformed"
        },
        {
          "widget-type": "select",
          "label": "Entity to be tokenized",
          "name": "tokenizationUnit",
          "widget-attributes": {
            "values": [
              "word",
              "character"
            ],
            "default": "word"
          }
        },
        {
          "widget-type": "textbox",
          "label": "Pattern to split the input string fields on",
          "name": "patternSeparator"
        },
        {
          "widget-type": "textbox",
          "label": "N-Gram Size",
          "name": "ngramSize"
        },
        {
          "widget-type": "textbox",
          "label": "Transformed Field",
          "name": "outputField"
        }
      ]
    }
  ],
  "outputs": []
}
