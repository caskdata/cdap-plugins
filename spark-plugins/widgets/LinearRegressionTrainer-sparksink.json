{
  "metadata": {
    "spec-version": "1.0"
  },
  "configuration-groups": [
    {
      "label": "Linear Regression Trainer Properties",
      "properties": [
        {
          "widget-type": "textbox",
          "label": "FileSet Name",
          "name": "fileSetName"
        },
        {
          "widget-type": "textbox",
          "label": "Path",
          "name": "path"
        },
        {
          "widget-type": "csv",
          "label": "Features to Include",
          "name": "featuresToInclude",
          "widget-attributes": {
            "delimiter": ",",
            "value-placeholder": "Field Name"
          }
        },
        {
          "widget-type": "csv",
          "label": "Features to Exclude",
          "name": "featuresToExclude",
          "widget-attributes": {
            "delimiter": ",",
            "value-placeholder": "Field Name"
          }
        },
        {
          "widget-type": "textbox",
          "label": "Label Field",
          "name": "labelField"
        },
        {
          "widget-type": "number",
          "label": "Number of Iterations",
          "name": "numIterations",
          "widget-attributes": {
            "default": "100"
          }
        },
        {
          "widget-type": "textbox",
          "label": "Step Size",
          "name": "stepSize",
          "widget-attributes": {
            "default": "1.0"
          }
        }
      ]
    }
  ],
  "outputs": []
}
