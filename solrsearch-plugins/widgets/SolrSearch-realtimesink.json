{
  "metadata": {
    "spec-version": "1.1",
    "label": "SolrSearch"
  },
  "configuration-groups": [
    {
      "label": "Solr Search Configuration",
      "properties": [
        {
          "widget-type": "textbox",
          "label": "Reference Name",
          "name": "referenceName"
        },
        {
          "widget-type": "select",
          "label": "Solr Mode",
          "name": "solrMode",
          "widget-attributes": {
            "values": [
              "Single Node Solr",
              "SolrCloud"
            ],
            "default": "Single Node Solr"
          }
        },
        {
          "widget-type": "csv",
          "label": "Solr Host",
          "name": "solrHost"
        },
        {
          "widget-type": "textbox",
          "label": "Collection",
          "name": "collectionName"
        },
        {
          "widget-type": "textbox",
          "label": "ID Field",
          "name": "idField"
        },
        {
          "widget-type": "keyvalue",
          "label": "Fields to rename",
          "name": "outputFieldMappings",
          "widget-attributes": {
            "showDelimiter": "false"
          }
        }
      ]
    }
  ],
  "outputs": []
}
